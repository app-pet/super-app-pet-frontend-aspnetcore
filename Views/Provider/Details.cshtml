@model ProviderModel

@{
    ViewData["Title"] = "Details";
}

<div id="main" class="container-fluid">
    <h3 class="page-header">Details</h3>
    <div class="row">
        <div class="col-md-4">
            <p><strong>Services</strong></p>
            @for (int i = 0; i < Model.Services.Length; i++)
            {
                <p id="services">@Model.Services[i]</p> 
            }
        </div>
        <div class="col-md-4">
            <p><strong>Name</strong></p>
            <p id="name">@Model.Name</p>
        </div>
        <div class="col-md-4">
            <p><strong>E-mail</strong></p>
            <p id="email">@Model.Email</p>
        </div>
        <div class="col-md-4">
            <p><strong>Phone</strong></p>
            <p id="phone">@Model.Phone</p>
        </div>
    </div> <!-- .row -->
</div>
<div id="actions" class="row">
    <div class="col-md-12" style="margin: 0.8%;">
        <a class="btn btn-primary" href='@Url.Action("Edit", "Provider", new { Phone = ViewData["PhoneNumber"] })'>Edit</a>
        <a href='@Url.Action("Index", "Provider")' class="btn btn-default">Voltar</a>
    </div>
</div>